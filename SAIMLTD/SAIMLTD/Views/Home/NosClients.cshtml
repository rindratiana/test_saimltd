
@{
    ViewBag.Title = "Nos clients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Liste des clients</strong>
        </div>
        <div class="card-body">
            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nom de la société</th>
                        <th>Adresse</th>
                        <th>Contact(s)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 1; i < 11; i++)
                    {
                        <tr>
                            <td>Société @i</td>
                            <td>Adresse @i</td>
                            <td>Contact @i</td>
                            <td>
                                <span><i class="fa fa-eye"></i> <i class="fa fa-edit"></i> <i class="fa fa-trash"></i></span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>